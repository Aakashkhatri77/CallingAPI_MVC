@*Blogs section*@


<div class="uk-grid-small uk-child-width-1-3@s uk-padding " uk-grid>
    @foreach (var item in Model)
    {
        <div>
            <div class="uk-card uk-card-default" style="border-radius:6px; ">
                <div class="uk-card-media-top card-img">
                    <a asp-action="Details" asp-route-id="@item.id"><img src="@item.image_link_medium" alt="" style="border-radius: 6px 6px 0px 0px; object-fit:cover"></a>
                </div>
                <div class="uk-card-body">
                    <a asp-action="Details" asp-route-id="@item.id"><h3 class="uk-card-title">@item.title</h3></a>
                </div>
            </div>
        </div>
    }
</div>




